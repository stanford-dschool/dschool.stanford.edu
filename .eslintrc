{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "semi": [2, "never"],
    "max-len": [0],
    "comma-dangle": [2],
    "no-cond-assign": [2, "except-parens"],
    "no-param-reassign": [0],
    "no-mixed-operators": [0],
    "react/jsx-filename-extension": [0],
    "import/no-extraneous-dependencies": [0],
    "import/prefer-default-export": [0]
  },
  "env": {
    "browser": true,
    "node": true
  }
}
